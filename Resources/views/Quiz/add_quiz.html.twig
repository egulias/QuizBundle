{% extends 'EguliasQuizBundle::layout.html.twig' %}


{% block extra_js %}
        <script src="{{ asset ('bundles/eguliasquiz/js/quiz_control.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
<h1>{% trans %} New Quiz {% endtrans  %}
<form action="{% block form_action %} {{ path('egulias_quiz_save')}} {% endblock %}" method="POST" {{
  form_enctype(form)}} class = "form-stacked" >
<div class="clearfix">
  {{ form_label(form.name) }}
  {{ form_errors(form.name) }}
  {{ form_widget(form.name) }}
  <span class="help-block"><strong>{% trans %}Note: {% endtrans %}</strong>{% trans %} The name of the Quiz{% endtrans %}</span>
</div>
<div class="clearfix">
  {{ form_label(form.questions) }}
  <span class="help-block"><a href="{% block question_url %}{{ path('egulias_quiz_add_question')}}{% endblock  %}"
  class='addQuestion' >Add a Question</a></span>
  {{ form_errors(form.questions) }}
  {{ form_widget(form.questions) }}
  <span class="help-block"><strong>{% trans %}Note: {% endtrans %}</strong>{% trans %} Use the link above to add new
  questions to the quiz{% endtrans %}</span>
</div>
{{ form_widget(form) }}
<table id='questions_table'>
</table>
<button type='submit' class="btn primary">{% trans %}Save Quiz{% endtrans %}</button>
</form>
{% endblock %}


